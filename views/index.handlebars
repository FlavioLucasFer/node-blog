<div class="h-100 p-5 bg-light border rounded-3">
	<h1 class="display-4">Welcome to Node Blog</h1>
	<p class="lead">
		This is a blog built with Node.js + Express + MongoDB for learning about this technologies.
	</p>
	<hr class="my-4">
	<p class="lead">
		<a class="btn btn-primary btn-lg" href="#" role="button">Create account</a>
	</p>
</div>

<hr>

<h2>Recent posts:</h2>

{{#each posts}}
	<div class="card mt-4">
		<div class="card-body">
			<h3>{{title}}</h3>
			<p>{{description}}</p>

			<a href="/post/{{slug}}">
				<button class="btn btn-success">Read more!</button>
			</a>

			<hr>
			<small>Category: {{category.name}}</small>
			<br>
			<small>Posted at: {{date}}</small>
		</div>
	</div>
{{else}}
	<h4>No posts found!</h4>
{{/each}}