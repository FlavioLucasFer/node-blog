<h2>Posts:</h2>
<hr>
<a href="/admin/posts/add">
	<button class="btn btn-success">New</button>
</a>

{{#each posts}}
	<div class="card mt-4">
		<div class="card-body">
			<h4>{{title}}</h4>
			<p>Description: {{description}}</p>
			<small>Date: {{date}}</small>
			<br>
			<small>Category: {{category.name}}</small>

			<br>
			<a href="/admin/posts/edit/{{_id}}">
				<button class="btn btn-success mt-2">Edit</button>
			</a>
			<a href="/admin/posts/edit/{{_id}}">
				<button class="btn btn-danger mt-2">Delete</button>
			</a>
		</div>
	</div>
{{else}}
	<p>No posts found!</p>
{{/each}}