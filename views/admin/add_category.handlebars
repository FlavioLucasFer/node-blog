{{#each errors}}
	<div class="alert alert-danger">{{message}}</div>
{{else}}
{{/each}}

<h3>New category: </h3>

<div class="card">
	<div class="card-body">
		<form action="{{adminRoute}}/{{newCategoryRoute}}" method="POST">
			<label for="nome">Name: </label>
			<input type="text" id="name" name="name" placeholder="Type name for category" class="form-control">
			
			<label for="slug" class="mt-2">Slug: </label>
			<input type="text" id="slug" name="slug" placeholder="Type slug for category" class="form-control">

			<button type="submit" class="btn btn-success mt-4">Create category</button>
		</form>
	</div>
</div>