<h2>Categories:</h2>
<hr>
<a href="/admin/categories/add">
	<button class="btn btn-success">New</button>
</a>
{{#each categories}}
	<div class="card mt-2">
		<div class="card-body">
			<h4>{{name}}</h4>
			<small>Slug: {{slug}}</small>
			<div class="mt-4">
				<a href="/admin/categories/edit/{{_id}}">
					<button class="btn btn-success">Edit</button>
				</a>
			</div>
			<form action="/admin/categories/delete" method="POST" class="mt-2">
				<input type="hidden" name="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger">Delete</button>
			</form>
		</div>
	</div>
{{else}}
	<h4 class="mt-4">No categories found!</h4>
{{/each}}