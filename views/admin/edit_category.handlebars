{{#each errors}}
<div class="alert alert-danger">{{message}}</div>
{{else}}
{{/each}}

<h3>Edit category: </h3>

<div class="card">
	<div class="card-body">
		<form action="{{adminRoute}}/{{editCategoryRoute}}" method="POST">
			<input type="hidden" name="id" value="{{category._id}}">
			
			<label for="nome">Name: </label>
			<input type="text" id="name" name="name" placeholder="Type name for category" class="form-control" value="{{category.name}}">

			<label for="slug" class="mt-2">Slug: </label>
			<input type="text" id="slug" name="slug" placeholder="Type slug for category" class="form-control" value="{{category.slug}}">

			<button type="submit" class="btn btn-success mt-4">Confirm</button>
		</form>
	</div>
</div>